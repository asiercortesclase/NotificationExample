<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.paul.debashis.notificationexample" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NotificationReceiverActivity"
            android:label="@string/title_activity_notification_receiver"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".SpecialActivity"
            android:excludeFromRecents="true"
            android:label="@string/title_activity_special"
            android:taskAffinity="" >
        </activity>
        <activity
            android:name=".PingService"
            android:label="@string/title_activity_ping_service" >
        </activity>
    </application>

</manifest>
